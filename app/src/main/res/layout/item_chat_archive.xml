<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="@dimen/item_size"
    android:padding="@dimen/spacing_normal_16"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_avatar_archive"
        android:layout_height="@dimen/avatar_item_size"
        android:layout_width="@dimen/avatar_item_size"
        android:background="@drawable/bg_archive_avatar"
        android:src="@drawable/ic_archive_black_24dp"
        android:padding="@dimen/spacing_small_8"
        android:layout_marginRight="@dimen/spacing_normal_16"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_title_archive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/archive_title"
        android:textColor="@color/color_primary"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/iv_avatar_archive"
        android:layout_toLeftOf="@+id/tv_date_archive"
        android:layout_marginRight="@dimen/spacing_normal_16"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_message_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="\@John_Doe"
        android:textColor="@color/color_primary"
        android:textSize="14sp"
        android:layout_below="@id/tv_title_archive"
        android:layout_toRightOf="@id/iv_avatar_archive"
        android:layout_marginRight="@dimen/spacing_tiny_4"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_message_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Когда я проходил интенсив, я мало спал"
        android:textColor="@color/color_gray_dark"
        android:textSize="14sp"
        android:layout_below="@id/tv_title_archive"
        android:layout_toRightOf="@id/tv_message_author"
        android:layout_marginRight="@dimen/spacing_normal_16"/>

    <TextView
        android:id="@+id/tv_date_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/color_gray_dark"
        tools:text="18:00"/>
    <TextView
        android:id="@+id/tv_counter_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/counter_size"
        android:minHeight="@dimen/counter_size"
        android:gravity="center"
        android:textSize="10sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_counter"
        android:layout_alignParentBottom="true"
        tools:text="11"/>
</RelativeLayout>